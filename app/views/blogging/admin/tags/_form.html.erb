<%= form_with(model: model, url: url, method: method) do |form| %>
  <%= form.text_field_group :name %>

  <div class='flex justify-end mt-4'>
    <%= link_to 'Cancel', admin_posts_path, class: 'btn btn-secondary mr-4' %>
    <%= form.submit t('.submit'), { data: { action: 'modal#submit' }} %>
  </div>
<% end %>
